#!/usr/bin/make -f

# Verbose mode
export DH_VERBOSE=1

%:
	dh $@ --with python2

override_dh_auto_install:
	dh_auto_install
	python setup.py install --install-layout=deb --root=$(CURDIR)/debian/tmp

override_dh_python2:
	dh_python2 --no-guessing-deps

get-orig-source:
	uscan --verbose --force-download --rename --destdir=../build-area
